{
  "compilerOptions": {
    "baseUrl": ".",

    "paths": {
      "@/*": ["src/*"]
    },

    "target": "ES2020",
    "module": "commonjs",

    "rootDir": "./",
    "outDir": "./dist",

    "strict": true,

    "esModuleInterop": true,

    // ðŸ‘‡ ESSENCIAIS PRO TYPEORM
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,

    "skipLibCheck": true
  },

  "include": [
    "src/**/*",
    "index.ts"
  ]
}
